@model DTO.UserRegisterDTO

@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <a class="btn btn-primary mb-3" asp-action="ChangePassword">Change Password</a>
            <hr />

            <form asp-action="Profile" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="userName" class="control-label">User Name</label>
                    <input asp-for="userName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label">Phone</label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="EmailAddress" class="control-label">Email Address</label>
                    <input asp-for="EmailAddress" class="form-control" />
                </div>
                
            </form>

            <div class="mt-3">
                <a asp-action="Index" asp-controller="Home" class="btn btn-success text-decoration-none">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
