@model AddCategoryDto
@{
    SelectList categoryList = new SelectList(Model.Categories, "Id", "Name");
}
<h1 class="m-3 text-info"><strong>Edit</strong></h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="arabicName" class="control-label">Arabic Name</label>
                    <input asp-for="arabicName" class="form-control" />
                    <span asp-validation-for="arabicName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="categoryId" class="control-label">Category</label>
                    <select asp-items="categoryList" asp-for="categoryId" class="form-control">
                        <option value="0">--Select Category--</option>
                    </select>
                    <span asp-validation-for="categoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="imageFile" class="control-label">Image</label>
                    <input asp-for="imageFile" type="file" class="form-control-file" />
                    <span asp-validation-for="imageFile" class="text-danger"></span>
                    <div class="mt-2">
                        @if (Model.ImageUrl != null)
                        {
                            <img src="~/uploadedImages/@Model.ImageUrl" class="img-fluid rounded" />
                        }
                    </div>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-block">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
